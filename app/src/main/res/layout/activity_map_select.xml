<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_root">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap on the map to pick a location"
        android:textColor="@color/text_primary"
        android:padding="12dp"/>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/mapAddressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No location selected"
        android:textColor="@color/text_secondary"
        android:padding="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.myquill.app.SoundButton
            android:id="@+id/mapCancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/bg_button_secondary"
            android:layout_marginEnd="4dp"/>

        <com.myquill.app.SoundButton
            android:id="@+id/mapConfirmBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Use this location"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/bg_button_primary"/>
    </LinearLayout>
</LinearLayout>
